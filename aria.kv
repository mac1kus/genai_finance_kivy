# aria.kv

BoxLayout:
    orientation: 'vertical'
    spacing: 0

    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # â”€â”€ Header â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    BoxLayout:
        size_hint_y: None
        height: '60dp'
        padding: '16dp', '8dp'
        spacing: '8dp'
        canvas.before:
            Color:
                rgba: 0.1, 0.14, 0.22, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "ðŸ“ˆ  Finance AI"
            font_size: '22sp'
            bold: True
            color: 0.33, 0.6, 1, 1
            halign: 'left'
            valign: 'middle'
            text_size: self.size

        Button:
            text: "âœ• Exit"
            size_hint_x: None
            width: '80dp'
            background_normal: ''
            background_color: 0.7, 0.1, 0.1, 1
            font_size: '16sp'
            bold: True
            on_release: app.exit_app()

    # â”€â”€ Chat Area â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    ScrollView:
        id: chat_scroll
        size_hint_y: 1
        do_scroll_x: False
        do_scroll_y: True
        bar_width: '4dp'
        bar_color: 0.33, 0.6, 1, 0.6
        bar_inactive_color: 0.33, 0.6, 1, 0.2

        Label:
            id: chat_logs
            text: "[b][color=00cc88]Consultant:[/color][/b] Good day! I'm your Advanced Retail Investment Advisor. ðŸ“ˆ\n\nAsk me about any stock on NSE or US markets (e.g. [i]RELIANCE.NS[/i] or [i]TSLA[/i])."
            markup: True
            font_size: '17sp'
            size_hint_y: None
            height: max(self.texture_size[1] + 40, chat_scroll.height)
            text_size: self.width, None
            halign: 'left'
            valign: 'top'
            padding: (16, 16)
            color: 1, 1, 1, 1

    # â”€â”€ Divider â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    Widget:
        size_hint_y: None
        height: '1dp'
        canvas:
            Color:
                rgba: 0.2, 0.2, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

    # â”€â”€ Input Row â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '72dp'
        padding: '10dp', '8dp'
        spacing: '8dp'
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            id: user_input
            hint_text: "Type a stock symbol or questionâ€¦"
            hint_text_color: 0.45, 0.45, 0.55, 1
            multiline: False
            font_size: '20sp'
            background_color: 0.15, 0.15, 0.22, 1
            foreground_color: 1, 1, 1, 1
            cursor_color: 0.33, 0.6, 1, 1
            padding: ('12dp', '10dp')
            input_type: 'text'
            input_filter: None
            on_text_validate: app.send_message()

        Button:
            text: "Send"
            size_hint_x: None
            width: '80dp'
            background_normal: ''
            background_color: 0.2, 0.5, 1, 1
            font_size: '18sp'
            bold: True
            on_release: app.send_message()
